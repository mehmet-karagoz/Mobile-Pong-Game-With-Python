<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    background_color: 0, 0, 0, 1
    blue: 16/255, 66/255, 224/255, 1
    orange: 211/255, 84/255, 0, 1
    canvas:
        Color:
            rgba: root.blue
        Rectangle:
            pos: 0, 0
            size: self.width, self.height
        Color:
            rgba: root.background_color
        Rectangle:
            pos: 10, 10
            size: self.width - 20, self.height - 20
        Color:
            rgba: root.blue
        Rectangle:
            pos: 0, self.center_y
            size: self.width, 10

    Label:
        color: root.orange
        font_size: 40
        center_x: root.width / 4
        top: root.height / 4
        text: str(root.player1.score)

    Label:
        color: root.orange
        font_size: 40
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player2.score)

    Ball:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.center_x
        center_y: 15

    PongPaddle:
        id: player_right
        x: root.center_x
        center_y: root.height - 15

<Ball>:
    red: 1, 0, 0, 1
    size: 20, 20
    canvas:
        Color:
            rgba: root.red
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 200, 15
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size